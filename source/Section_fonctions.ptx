Pts=points([(-3,1)],color="black",pointsize=20)+points([(-3,0)],color="black",pointsize=20)+points([(-3,-1)],color="black",pointsize=20)+points([(-0,1)],color="black",pointsize=20)+points([(-0,0)],color="black",pointsize=20)+points([(-0,-1)],color="black",pointsize=20)+points([(3,1)],color="black",pointsize=20)+points([(3,1/3)],color="black",pointsize=20)+points([(3,-1/3)],color="black",pointsize=20)+points([(3,-1)],color="black",pointsize=20)
